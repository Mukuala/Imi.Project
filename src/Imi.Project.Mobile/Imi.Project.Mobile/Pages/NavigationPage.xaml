<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.Pages.NavigationPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Actors" Command="{Binding OpenActorsPage}"/>
            <Button Text="Genres" Command="{Binding OpenGenresPage}"/>
            <Button Text="Users"  Command="{Binding OpenUsersPage} "/>

            <Button Text="Add Movie" Command="{Binding OpenAddMoviePage}"/>
            <Button Text="Add Actor" Command="{Binding OpenAddActorPage}"/>
            <Button Text="Add Genre" Command="{Binding OpenAddGenrePage}"/>
            <Button Text="Add User"  Command="{Binding OpenAddUserPage}"/>

            <Button Text="Watchlist" Command="{Binding OpenWatchlistPage}"/>
            <Button Text="Favorite"  Command="{Binding OpenFavoritePage}"/>
            <Button Text="Profile"   Command="{Binding OpenProfilePage}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>