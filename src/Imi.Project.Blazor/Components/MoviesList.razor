
<div class=" container">
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Rating</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Movies)
            {
                <tr>
                    <td>
                        <a href="/movies/@movie.Id">
                            <img src="@movie.Image" style="object-fit:cover" height="100" />
                        </a>
                    </td>
                    <td><a href="/movies/@movie.Id">@movie.Name</a></td>
                    <td>@movie.AverageRating/10</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<MovieResponseDto> Movies { get; set; }
}
