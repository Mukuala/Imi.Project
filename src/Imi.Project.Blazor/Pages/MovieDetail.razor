@*@page "/movies/{movieId:int}"
@inherits Movies
<h3>Movie Detail</h3>

<div class="card border-0 mx-auto" style="width:75%">
    <div class="card-header" style="background-color:white">
        <h2>@movie.Name</h2>
    </div>
    <img src="@movie.Image" class="card-img-top" />
    <div class="card-body">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Release Date</th>
                    <td>@movie.ReleaseDate</td>
                </tr>
                <tr>
                    <th>Actor(s)</th>
                    <td>
                        @foreach (var actor in movie.Actors)
                        {
                            <span>
                                @actor.Name
                            </span>
                        }

                    </td>
                </tr>
                <tr>
                    <th>Genre(s)</th>
                    <td>
                        @foreach (var genre in movie.Genres)
                        {
                            <span> @genre.Name</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>@movie.Duration</td>
                </tr>
                <tr>
                    <th>Rating</th>
                    <td>@movie.AverageRating</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@movie.Description</td>
                </tr>
                <tr>
                    <th>Trailer</th>
                    <td>
                        <iframe src="@movie.EmbeddedTrailerUrl" height="300" frameborder="0"> </iframe>
                    </td>
                </tr>
            </tbody>
        </table>
        <br />
        <button class="btn-danger btn-block" data-toggle="modal" data-target="#delete">Delete</button>
        <a href="/movies/edit/@MovieId" class="btn btn-primary btn-block">Edit</a>
    </div>
</div>

